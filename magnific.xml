<?xml version="1.0" encoding="utf-8"?>
<install version="2.5"
         type="plugin"
         group="system"
         method="upgrade">
	<name>System - Magnific Popup</name>
	<author>Matt Thomas</author>
	<creationDate>October 28, 2013</creationDate>
	<copyright>2013 Matt Thomas</copyright>
	<license>GPL 2.0</license>
	<authorEmail>matt@betweenbrain.com</authorEmail>
	<authorUrl>http://www.betweenbrain.com</authorUrl>
	<version>0.1</version>
	<description>A simple plugin to automagically launch a Magnific Popup based lightbox on selected pages. For more
		information about Magnific Popup, please visit http://dimsemenov.com/plugins/magnific-popup/
	</description>

	<files>
		<filename plugin="magnific">magnific.php</filename>
		<folder>elements</folder>
	</files>

	<media folder="media">
		<folder>js</folder>
		<folder>css</folder>
	</media>

	<languages>
		<language tag="en-GB">en-GB.plg_system_magnific.ini</language>
	</languages>

	<params addpath="/plugins/system/elements">
		<param name="menuItems"
		       type="menuitems"
		       default=""
		       label="PLG_SYSTEM_MAGNIFIC_POPUP_MENUITEMS_LABEL"
		       description=""/>
		<param name="source"
		       type="text"
		       default=""
		       label="PLG_SYSTEM_MAGNIFIC_POPUP_SOURCE_LABEL"
		       description=""/>
		<param name="popupType"
		       type="list"
		       default="ajax"
		       label="PLG_SYSTEM_MAGNIFIC_POPUP_TYPE_LABEL"
		       description="">
			<option value="ajax">Ajax</option>
			<option value="iframe">Iframe</option>
			<option value="inline">Inline</option>
		</param>
		<param name="popupMode"
		       type="list"
		       default="once"
		       label="PLG_SYSTEM_MAGNIFIC_POPUP_MODE_LABEL"
		       description="">
			<option value="once">Once</option>
			<option value="daily">Daily</option>
			<option value="load">On Load</option>
		</param>
		<param name="delay"
		       type="text"
		       default="0"
		       label="PLG_SYSTEM_MAGNIFIC_POPUP_DELAY_LABEL"
		       description=""/>
	</params>

	<config>
		<fields name="params"
		        addpath="/plugins/system/elements">
			<fieldset name="basic">
				<field name="menuItems"
				       type="menuitems"
				       default=""
				       label="PLG_SYSTEM_MAGNIFIC_POPUP_MENUITEMS_LABEL"
				       description=""/>
				<field name="source"
				       type="text"
				       default=""
				       label="PLG_SYSTEM_MAGNIFIC_POPUP_SOURCE_LABEL"
				       description=""/>
				<field name="popupType"
				       type="list"
				       default="ajax"
				       label="PLG_SYSTEM_MAGNIFIC_POPUP_MODE_LABEL"
				       description="">
					<option value="ajax">Ajax</option>
					<option value="iframe">Iframe</option>
					<option value="inline">Inline</option>
				</field>
			</fieldset>
		</fields>
	</config>

</install>